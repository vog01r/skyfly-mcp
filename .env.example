# ============================================
# Skyfly MCP Server - Configuration Example
# ============================================
# Copiez ce fichier vers .env et configurez vos valeurs

# OpenSky Network API Credentials (optionnel)
# Sans authentification: limite de 1 requête/10 secondes
# Avec authentification: limite plus élevée
OPENSKY_USERNAME=
OPENSKY_PASSWORD=

# Configuration du serveur HTTP
HOST=0.0.0.0
PORT=8000

# Configuration SSL/HTTPS (optionnel)
# Utilisez setup_ssl.sh pour générer les certificats
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# Configuration de la base de données AircraftDB
# Chemin vers la base SQLite (créée automatiquement)
AIRCRAFTDB_PATH=./aircraftdb/aircraft.db

# Configuration des logs
LOG_LEVEL=INFO
LOG_FORMAT=json

# Configuration CORS (optionnel)
# Pour restreindre les domaines autorisés
CORS_ORIGINS=*

# Configuration MCP
# Nom du serveur MCP
MCP_SERVER_NAME=skyfly-aircraftdb-mcp

# Configuration de développement
DEBUG=false
RELOAD=false

# Limites de rate limiting (optionnel)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# Configuration de monitoring (optionnel)
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false

# Variables d'environnement pour le déploiement
# Utilisées par les scripts de déploiement
DEPLOY_ENV=production
SERVICE_NAME=opensky-mcp