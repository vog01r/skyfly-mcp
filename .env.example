# ============================================
# Skyfly MCP Server - Configuration Example
# ============================================
# Copiez ce fichier vers .env et ajustez les valeurs selon vos besoins

# === API OpenSky Network ===
# Optionnel: Identifiants pour l'API OpenSky Network
# Sans authentification: limité à une requête toutes les 10 secondes
# Avec authentification: limites plus élevées
OPENSKY_USERNAME=
OPENSKY_PASSWORD=

# === Configuration Serveur ===
# Port d'écoute du serveur HTTP/HTTPS
PORT=8000

# Interface d'écoute (0.0.0.0 pour toutes les interfaces)
HOST=0.0.0.0

# === Configuration SSL/TLS (Optionnel) ===
# Utilisez setup_ssl.sh pour générer les certificats
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# === Configuration Base de Données (AircraftDB) ===
# Chemin vers la base de données SQLite (créée automatiquement)
DATABASE_PATH=aircraftdb/aircraft.db

# === Configuration MCP ===
# Nom du serveur MCP
MCP_SERVER_NAME=skyfly-aircraftdb-mcp

# === Logging ===
# Niveau de log (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
LOG_FORMAT=json

# === Sécurité ===
# Clé secrète pour la signature des tokens (générez une clé aléatoire forte)
SECRET_KEY=

# Domaines autorisés pour CORS (séparés par des virgules)
ALLOWED_ORIGINS=*

# === Limites de Taux ===
# Nombre maximum de requêtes par minute par IP
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# === Configuration Avancée ===
# Timeout des requêtes HTTP en secondes
HTTP_TIMEOUT=30

# Nombre maximum d'aéronefs retournés par requête
MAX_AIRCRAFT_RESULTS=100

# Cache TTL en secondes pour les données OpenSky
CACHE_TTL=10

# === Configuration de Développement ===
DEBUG=false
RELOAD=false

# === Configuration de Monitoring (Optionnel) ===
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false

# === Variables d'Environnement pour le Déploiement ===
# Utilisées par les scripts de déploiement
DEPLOY_ENV=production
SERVICE_NAME=opensky-mcp
